@page
@model IndexModel
@{
}

<div id="app">
   
   
    <div>
        <p v-for="(product, index) in products">

            
            {{product.id}} - {{product.name}}
            <a @@click="editProduct(product.id, index)">Edit</a>
            <a @@click="deleteProduct(product.id, index)">Remove</a>
        </p>
    </div>

    <div>
        <input v-model="productModel.name" />
        <input v-model="productModel.description" />
        <button @@click="createProduct" v-if="productModel.id">Update Product</button>
        <button @@click="updateProduct" v-else>Create Product</button>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/Admin/main.js"></script>
}